@using (Html.BeginForm("AddData", "ErrorCount", FormMethod.Post, new { @id = "dataadd", @class = "needs-validation", novalidate = "novalidate" }))
{
    <div class="modal-content">
        <div class="modal-header bg-gradient-primary">
            <h3 class="modal-title text-white" id="AddCalendarModal">
                <i class="fas fa-plus-circle mr-2"></i>Add Exception Counts
            </h3>
        </div>

        <div class="ModalAlert row m-3"></div>

        <div class="modal-body">
            <div class="container-fluid">
                <div class="form-group row mb-4">
                    <label class="col-md-3 col-form-label">
                        <i class="fas fa-id-card mr-2"></i>ID
                    </label>
                    <div class="col-md-9">
                        <input type="text" name="errcount.Id_Name" class="form-control form-control-lg" placeholder="Enter unique identifier" required />
                        <div class="invalid-feedback">Please provide a valid ID</div>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="col-md-3 col-form-label">
                        <i class="far fa-calendar-alt mr-2"></i>Date
                    </label>
                    <div class="col-md-9">
                        <input type="date" name="errcount.Date" class="form-control form-control-lg flatpickr" required />
                        <div class="invalid-feedback">Please select a date</div>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="col-md-3 col-form-label">
                        <i class="fas fa-ship mr-2"></i>Mast Integration
                    </label>
                    <div class="col-md-9">
                        <input type="number" name="errcount.MASTIntegration_Shipment" class="form-control form-control-lg" placeholder="0" min="0" step="1" required />
                        <small class="form-text text-muted">Number of shipment errors</small>
                        <div class="invalid-feedback">Please enter a valid number</div>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="col-md-3 col-form-label">
                        <i class="fas fa-eye mr-2"></i>OneVision B2BASN
                    </label>
                    <div class="col-md-9">
                        <input type="number" name="errcount.OneVision_B2BASN" class="form-control form-control-lg" placeholder="0" min="0" step="1" required />
                        <small class="form-text text-muted">B2B ASN error count</small>
                        <div class="invalid-feedback">Please enter a valid number</div>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label class="col-md-3 col-form-label">
                        <i class="fas fa-exclamation-triangle mr-2"></i>RP Integration
                    </label>
                    <div class="col-md-9">
                        <input type="number" name="errcount.RPIntegration_US_ExceptionReport" class="form-control form-control-lg" placeholder="0" min="0" step="1" required />
                        <small class="form-text text-muted">US Exception Report count</small>
                        <div class="invalid-feedback">Please enter a valid number</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer bg-light">
            <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-dismiss="modal">
                <i class="fas fa-times mr-2"></i>Cancel
            </button>
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-check mr-2"></i>Submit
            </button>
        </div>
    </div>
}