@model Int_Err_Count.Models.ErrorCountViewModel;

@{
    ViewData["Title"] = "Error Count Dashboard";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">
             Error Count Dashboard
        </h1>
        <a href="@Url.Action("AddForm","ErrorCount")" class="btn btn-add">
            <i class="fas fa-plus-circle"></i> Add New Data
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-vibrant">
            <thead class="table-header">
                <tr>
                    <th><i class="fas fa-id-badge"></i> ID</th>
                    <th><i class="far fa-calendar-alt"></i> Date</th>
                    <th><i class="fas fa-ship"></i> Mast</th>
                    <th><i class="fas fa-eye"></i> OneVision</th>
                    <th><i class="fas fa-exclamation-triangle"></i> RP</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ErrorCounts)
                {
                    <tr class="table-row">
                        <td>@item.Id_Name</td>
                        <td>@item.Date.ToString("dd MMM yyyy")</td>
                        <td class="@GetCellClass(item.MASTIntegration_Shipment)">@item.MASTIntegration_Shipment</td>
                        <td class="@GetCellClass(item.OneVision_B2BASN)">@item.OneVision_B2BASN</td>
                        <td class="@GetCellClass(item.RPIntegration_US_ExceptionReport)">@item.RPIntegration_US_ExceptionReport</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetCellClass(int value) {
        if (value > 50) return "high-error";
        if (value > 20) return "medium-error";
        if (value > 0) return "low-error";
        return "no-error";
    }
}

<style>
    /* Vibrant Color Scheme */
    :root {
        --primary: #6c5ce7;
        --secondary: #00cec9;
        --success: #00b894;
        --warning: #fdcb6e;
        --danger: #d63031;
        --light: #f5f6fa;
        --dark: #2d3436;
        --text: #636e72;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .dashboard-title {
        color: var(--dark);
        font-weight: 700;
        display: flex;
        align-items: center;
        margin: 0;
    }

    .dashboard-title i {
        margin-right: 10px;
        color: var(--primary);
    }

    .btn-add {
        background-color: var(--success);
        color: white;
        border: none;
        padding: 5px ;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 184, 148, 0.3);
    }

    .btn-add:hover {
        background-color: #00a884;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 184, 148, 0.4);
    }

    .btn-add i {
        margin-right: 8px;
    }

    .table-vibrant {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        background: white;
    }

    .table-header {
        background: linear-gradient(135deg, var(--primary), #8c7ae6);
        color: white;
    }

    .table-header th {
        padding: 1.25rem 1.5rem;
        font-weight: 600;
        text-align: left;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table-header th i {
        margin-right: 8px;
    }

    .table-row {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f1f2f6;
    }

    .table-row:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .table-row td {
        padding: 1rem 1.5rem;
        color: var(--text);
        font-weight: 500;
    }

    /* Color-coded error levels */
    .high-error {
        color: white;
        background-color: var(--danger);
        font-weight: bold;
    }

    .medium-error {
        color: var(--dark);
        background-color: var(--warning);
    }

    .low-error {
        color: var(--dark);
        background-color: #ffeaa7;
    }

    .no-error {
        color: var(--success);
        background-color: rgba(0, 184, 148, 0.1);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .dashboard-header {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .btn-add {
            margin-top: 1rem;
            width: 100%;
            justify-content: center;
        }
        
        .table-header th {
            padding: 0.75rem;
            font-size: 0.75rem;
        }
        
        .table-row td {
            padding: 0.75rem;
            font-size: 0.85rem;
        }
    }
</style>